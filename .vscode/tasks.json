{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet: build (debug)",
            "type": "shell",
            "command": "dotnet build --nologo --configuration Debug",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "dotnet: test",
            "type": "shell",
            "command": "dotnet test --nologo --blame-hang-timeout 1min",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ]
}